{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tiny Games",
  "version": "0.1.0",
  "identifier": "com.c0mplexity.tiny-games-2",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../src/app/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Tiny Games",
        "width": 800,
        "height": 600,
        "decorations": false,
        "minWidth": 600,
        "minHeight": 400,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$RESOURCE/**/*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["../src/web/dist/**/*"]
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    }
  } 
}
